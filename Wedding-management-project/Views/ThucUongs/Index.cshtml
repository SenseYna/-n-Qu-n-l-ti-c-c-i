@model IEnumerable<Wedding_management_project.Models.QLThucUong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<!-- Breadcrumbs đồ uống-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="thucdon.html">Thực đơn</a>
    </li>
    <li class="breadcrumb-item">
        <a href="thucdon.html">Đồ uống</a>
    </li>
    <li class="breadcrumb-item active">
        <a href="thucdon-bia.html">Bia</a>
    </li>
    <li class="breadcrumb-item active">
        <a href="thucdon-ruou.html">Rượu</a>
    </li>
    <li class="breadcrumb-item active">
        <a href="thucdon-nuocngot.html">Nước ngọt</a>
    </li>
    <li class="breadcrumb-item active">
        <a href="thucdon-nuocsuoi.html">Nước suối</a>
    </li>
</ol>
<!-- DataTables drink -->
<div class="card mb-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-sm-6 mb-3">
                <div class="card text-white bg-primary o-hidden h-100">
                    <div class="card-body">
                        <div class="card-body-icon">
                        </div>
                        <div class="media">
                            <img class="ml-3 imgFixSize"
                                 src=""
                                 alt="..." style="
                      width: 200px;
                      height: 128px;
                  ">
                        </div>
                        <div class="mr-5">Món ăn 0</div>
                    </div>
                    <div class="card-footer text-white clearfix small z-1" href="#">
                        <span class="float-left" onclick="">@Html.ActionLink("Sửa", "Edit", new { id = item.ID })</span>
                        <span class="float-right">Xoá</span>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card-header">
        <button type="button" class="btn btn-success" onclick="openMenuDrink()">Thêm đồ uống</button>
    </div>
</div>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaTU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenTU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTaTU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonViTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGiaTU)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTaTU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonViTinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGiaTU)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
