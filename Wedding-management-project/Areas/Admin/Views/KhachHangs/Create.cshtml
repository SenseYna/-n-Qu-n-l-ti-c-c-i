@model Wedding_management_project.Models.QLKhachHang

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

        <!-- xác nhận khách hàng -->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="container-fluid" style="margin-top: 20px">
                <div class="form-group">
                    <h1 style="color:#000">THÔNG TIN KHÁCH HÀNG</h1>
                </div>
                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-row">
                        <div class="form-group col-md-5">
                            <label for="inputAddress" style="color:#000"> @Html.LabelFor(model => model.TenKH) </label>
                            @Html.EditorFor(model => model.TenKH, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenKH, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-5">
                            <label for="inputAddress" style="color:#000"> @Html.LabelFor(model => model.Email) </label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputState" style="color:#000">Giới tính</label>
                            <select id="inputState" class="form-control">
                                <option selected>Nam</option>
                                <option> Nữ </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="inputAddress" style="color:#000"> @Html.LabelFor(model => model.DiaChi) </label>
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputAddress" style="color:#000"> @Html.LabelFor(model => model.SĐT) </label>
                            @Html.EditorFor(model => model.SĐT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SĐT, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputAddress" style="color:#000"> @Html.LabelFor(model => model.CMND) </label>
                            @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">GHI CHÚ</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
                    </div>


                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck" style="color:#000">
                                Xác nhận
                            </label>
                        </div>
                    </div>
                    <div class="form-row" style="padding-bottom:20px">
                        <button class="btn btn-primary col-md-3" style="margin-left:50px">LÀM LẠI</button>
                        <button class="btn btn-primary col-md-3" style="margin-left:50px">CHỈNH SỬA</button>
                        <button type="submit" class="btn btn-primary" style="margin-left:50px">HOÀN TẤT</button>
                    </div>
                </form>
            </div>
        }


    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/datatables/jquery.dataTables.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="js/demo/datatables-demo.js"></script>

